{
    "name": "daysofwonder/phpleague-commonmark-implicit-figures",
    "description": "Render images occurring by itself in a paragraph as `<figure><img ...></figure>`, similar to pandoc's implicit figures",
    "keywords": ["markdown","parser","commonmark", "figure"],
    "type": "library",
    "require": {
        "php": "^8.2",
        "league/commonmark": "^2.3.9"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6.5"
    },
    "license": "MIT",
    "readme": "README.md",
    "authors": [
        {
            "name": "Florent Ruard-Dumaine",
            "email": "florent@daysofwonder.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "DoW\\CommonMark\\ImplicitFigures\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DoW\\CommonMark\\Tests\\Unit\\": "tests/unit",
            "DoW\\CommonMark\\Tests\\Functional\\": "tests/functional"
        }
    }
}
